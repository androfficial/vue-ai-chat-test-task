{
  "name": "ai-chat",
  "version": "1.0.0",
  "description": "AI Chat application with Cerebras AI integration. Features multiple chat sessions, streaming responses, dark/light themes, and multilingual support (EN/UK).",
  "private": true,
  "type": "module",
  "author": {
    "name": "Andrii Nakonechnyi",
    "email": "andriinkn@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/androfficial/vue-ai-chat-test-task.git"
  },
  "bugs": {
